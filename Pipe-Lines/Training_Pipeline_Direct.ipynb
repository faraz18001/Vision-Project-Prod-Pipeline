            "source": [
                "# Direct Training Pipeline (No Drive)\n",
                "\n",
                "**Description**: Trains the model using an uploaded dataset zip directly in this session.\n",
                "**Requirement**: You must upload your Roboflow Export Zip (YOLOv8 format).\n",
                "\n",
                "**Steps**:\n",
                "1. Upload Dataset Zip.\n",
                "2. (Optional) Upload previous `best.pt`.\n",
                "3. Train.\n",
                "4. Download Results."
            ]
        },
        {
            "cell_type": "code",
            "execution_count": null,
            "metadata": {},
            "outputs": [],
            "source": [
                "# Step 1: Install Dependencies\n",
                "!pip install ultralytics roboflow"
            ]
        },
        {
            "cell_type": "code",
            "execution_count": null,
            "metadata": {},
            "outputs": [],
            "source": [
                "# Step 2: Upload Files\n",
                "import os\n",
                "from google.colab import files\n",
                "import zipfile\n",
                "\n",
                "print(\"--- UPLOAD INSTRUCTIONS ---\")\n",
                "print(\"1. Upload your Roboflow Dataset Zip (containing data.yaml).\")\n",
                "print(\"2. (Optional) Upload your previous 'best.pt' if you want to resume/fine-tune.\")\n",
                "\n",
                "uploaded = files.upload()\n",
                "\n",
                "DATASET_DIR = \"dataset\"\n",
                "MODEL_PATH = \"yolov8n.pt\"\n",
                "\n",
                "for filename in uploaded.keys():\n",
                "    if filename.endswith('.pt'):\n",
                "        print(f"Custom model detected: {filename
                }\")\n",
                "        MODEL_PATH = filename\n",
                "    elif filename.endswith('.zip'):\n",
                "        # Check if it looks like a dataset (heuristic)\n",
                "        print(f"Dataset zip detected: {filename
                }\")\n",
                "        with zipfile.ZipFile(filename, 'r') as zip_ref:\n",
                "            zip_ref.extractall(DATASET_DIR)\n",
                "\n",
                "# Verify Dataset\n",
                "yaml_path = os.path.join(DATASET_DIR, \"data.yaml\")\n",
                "if not os.path.exists(yaml_path):\n",
                "    # Maybe it was extracted into a subfolder?\n",
                "    for root, dirs, files_in_dir in os.walk(DATASET_DIR):\n",
                "        if \"data.yaml\" in files_in_dir:\n",
                "            DATASET_DIR = root\n",
                "            yaml_path = os.path.join(DATASET_DIR, \"data.yaml\")\n",
                "            print(f"Found data.yaml in subfolder: {DATASET_DIR
                }")\n",
                "            break\n",
                "\n",
                "if not os.path.exists(yaml_path):\n",
                "    print(\"ERROR: Copy not find data.yaml in uploaded zip. Please upload a valid YOLOv8 export.\")\n",
                "else:\n",
                "    print(f"Dataset ready at: {DATASET_DIR
                }")"
            ]
        },
        {
            "cell_type": "code",
            "execution_count": null,
            "metadata": {},
            "outputs": [],
            "source": [
                "# Step 3: Fix YAML Paths\n",
                "import yaml\n",
                "\n",
                "if os.path.exists(yaml_path):\n",
                "    with open(yaml_path, 'r') as f:\n",
                "        data = yaml.safe_load(f)\n",
                "\n",
                "    # Update paths to be absolute\n",
                "    data['train'] = os.path.join(os.path.abspath(DATASET_DIR), \"train\", \"images\")\n",
                "    data['val'] = os.path.join(os.path.abspath(DATASET_DIR), \"valid\", \"images\")\n",
                "    data['test'] = os.path.join(os.path.abspath(DATASET_DIR), \"test\", \"images\")\n",
                "\n",
                "    with open(yaml_path, 'w') as f:\n",
                "        yaml.dump(data, f)\n",
                "\n",
                "    print(f\"Fixed data.yaml paths!\")\n",
                "    print(\"Classes:\", data['names'])"
            ]
        },
        {
            "cell_type": "code",
            "execution_count": null,
            "metadata": {},
            "outputs": [],
            "source": [
                "# Step 4: Train\n",
                "from ultralytics import YOLO\n",
                "\n",
                "print(f"Training using model: {MODEL_PATH
                }")\n",
                "model = YOLO(MODEL_PATH)\n",
                "\n",
                "results = model.train(\n",
                "    data=yaml_path,\n",
                "    epochs=50,\n",
                "    imgsz=640,\n",
                "    project=\"runs\",\n",
                "    name=\"direct_train_run\"\n",
                ")"
            ]
        },
        {
            "cell_type": "code",
            "execution_count": null,
            "metadata": {},
            "outputs": [],
            "source": [
                "# Step 5: Download Results\n",
                "!zip -r training_results.zip runs/direct_train_run\n",
                "\n",
                "from google.colab import files\n",
                "files.download('training_results.zip')"
            ]
        }
